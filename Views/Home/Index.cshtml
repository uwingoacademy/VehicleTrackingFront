<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer localizer
<div class="container-fluid">
    <!-- Page-Title -->
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <div class="row">
                    <div class="col">
                        <h4 class="page-title">@localizer["Analytics"]</h4>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0);">Uwingo</a></li>
                            <li class="breadcrumb-item active">@localizer["AdminPanel"]</li>
                        </ol>
                    </div>
                    <!--end col-->
                </div>
                <!--end row-->
            </div>
            <!--end page-title-box-->
        </div>
        <!--end col-->
    </div>
    <!--end row-->
    <!-- end page title end breadcrumb -->
    <div class="row">
        <div class="col-lg-12">
            <div class="row justify-content-center">
                <div class="col-md-4 col-lg-4"> 
                    <div class="card report-card">
                        <div class="card-body">
                            <div class="row d-flex justify-content-center">
                                <div class="col">
                                    <p class="text-dark mb-0 fw-semibold">@localizer["DeviceCount"]</p>
                                    <h3 class="m-0">@Model.deviceCound</h3>
                                    <p class="mb-0 text-truncate text-muted">@localizer["TotalDeviceCount"]</p>
                                </div>
                                <div class="col-auto align-self-center">
                                    <div class="report-main-icon bg-light-alt">
                                        <i data-feather="briefcase" class="align-self-center text-muted icon-sm"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-lg-4">
                    <div class="card report-card">
                        <div class="card-body">
                            <div class="row d-flex justify-content-center">
                                <div class="col">
                                    <p class="text-dark mb-0 fw-semibold">@localizer["Packages"]</p>
                                    <h3 class="m-0">@Model.paketsCound</h3>
                                    <p class="mb-0 text-truncate text-muted">@localizer["TotalPackageCount"]</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-lg-4">
                    <div class="card report-card">
                        <div class="card-body">
                            <div class="row d-flex justify-content-center">
                                <div class="col">
                                    <p class="text-dark mb-0 fw-semibold">@localizer["NumberOfTrackedVehicles"]</p>
                                    <h3 class="m-0">@Model.deviceVehiclesCound</h3>
                                    <p class="mb-0 text-truncate text-muted">@localizer["TotalTrackableVehicleCount"]</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-lg-4">
                    <div class="card report-card">
                        <div class="card-body">
                            <div class="row d-flex justify-content-center">
                                <div class="col">
                                    <p class="text-dark mb-0 fw-semibold">@localizer["VehicleCount"]</p>
                                    <h3 class="m-0">@Model.vehiclesCound</h3>
                                    <p class="mb-0 text-truncate text-muted">@localizer["TotalVehicleCount"]</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--end col-->
            </div>
            <!--end row-->
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="row align-items-center">
                            <partial name="_Maps" style="position:relative; z-index:1;"></partial>
                        </div>
                    </div>
                    <!--end row-->
                </div>
            </div>
        </div>
        <!--end card-->
    </div>
</div>


@section styles{
    <!-- jvectormap -->
    <link href="~/lib/jvectormap/jquery-jvectormap-2.0.2.css" rel="stylesheet">
}

@section scripts{
    <script src="~/lib/jvectormap/jquery-jvectormap-2.0.2.min.js"></script>
    <script src="~/lib/jvectormap/jquery-jvectormap-us-aea-en.js"></script>
}