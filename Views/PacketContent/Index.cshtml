    ViewData["Title"] = "Tedarikçiler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Tuple<List<PacketContent>,List<Packets>>
@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer localizer
