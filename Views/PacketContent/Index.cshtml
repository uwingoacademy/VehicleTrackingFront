<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <div class="row">
                    <div class="col">
                        <h4 class="page-title">@localizer["Packages"]</h4>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0);">@localizer["PackageManagement"]</a></li>
                            <li class="breadcrumb-item active">@localizer["Packages"]</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">@localizer["Packages"]</h4>
                    <p class="text-muted mb-0">
                        @localizer["PackagesRelatedToYourInventory"]
                    </p>
                </div>
                <div class="card-body">
                    <div class="button-items">
                        <button type="button" data-bs-toggle="modal" data-bs-target="#addDriver" class="btn btn-secondary">@localizer["AddPackage"]</button>
                    </div>
                </div>
                <div class="card-body">
                    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead>
                            <tr>
                                <th>@localizer["PacketName"]</th>
                                <th>@localizer["FieldName"]</th>
                                <th>@localizer["Description"]</th>
                                <th>@localizer["Update"]</th>
                                <th>@localizer["Delete"]</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model.Item1)
                            {
                                <tr>
                                    @foreach(var item2 in Model.Item2)
                                    {
                                        if (item2.PacketId == item.PacketId)
                                        {
                                            <th>@item2.PacketType</th>
                                        }
                                    }
                                    <td>@item.FieldName</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <div style="display: inline-block;">
                                            <button type="submit" class="btn btn-link text-reset fs-16 px-1" data-bs-toggle="modal" data-bs-target="#updateDriver" data-id="@item.PacketContentId" data-name="@item.FieldName" data-code="@item.PacketId" data-des="@item.Description">
                                                <i class="mdi mdi-alert-octagram"></i>
                                            </button>
                                        </div>
                                    </td>
                                    <td>
                                        <div style="display: inline-block;">
                                            <input type="hidden" id="PacketContentId" name="PacketContentId" value="@item.PacketContentId" />
                                            <button type="button" class="btn btn-link text-reset fs-16" onclick="Dele(@item.PacketContentId)">
                                                <i class="mdi mdi-delete-sweep"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="updateDriver" tabindex="-1" role="dialog" aria-labelledby="updateSupplierLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title m-0" id="updateSupplierLabel">@localizer["UpdatePackage"]</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" name="updatePacketContentId" id="updatePacketContentId" />
                <div class="form-group">
                    <label for="item-name">@localizer["FieldName"]</label>
                    <input type="text" class="form-control" id="FieldName" name="FieldName" required>
                </div>
                <div class="form-group">
                    <label for="item-name">@localizer["Description"]</label>
                    <input type="text" class="form-control" id="Description" name="Description" required>
                </div>
                <div class="form-group">
                    <label for="PacketId">@localizer["PacketName"]</label>
                    <select name="PacketId" class="form-select" id="PacketId">
                        @foreach (var item in Model.Item2)
                        {
                            <option value="@item.PacketId">@item.PacketType</option>
                        }
                    </select>
                </div>
                <div class="modal-footer">
                    <button type="button" id="sa-update" class="btn btn-soft-primary btn-sm">@localizer["SaveChanges"]</button>
                    <button type="button" class="btn btn-soft-secondary btn-sm" data-bs-dismiss="modal">@localizer["Close"]</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addDriver" tabindex="-1" role="dialog" aria-labelledby="addSupplierLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title m-0" id="addSupplierLabel">@localizer["AddPackage"]</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="item-name">@localizer["FieldName"]</label>
                    <input type="text" class="form-control" id="CreatePacketConName" name="CreatePacketConName" required>
                </div>
                <div class="form-group">
                    <label for="item-name">@localizer["DescriptionInformation"]</label>
                    <input type="text" class="form-control" id="CreatePacketDes" name="CreatePacketDes" required>
                </div>
                <div class="form-group">
                    <label for="item-name">@localizer["PacketName"]</label>
                    <select name="CreatePacketId" class="form-select" id="CreatePacketId">
                        @foreach (var item in Model.Item2)
                        {
                            <option value="@item.PacketId">@item.PacketType</option>
                        }
                    </select>
                </div>
                <div class="modal-footer">
                    <button type="button" id="sa-create" class="btn btn-soft-primary btn-sm">@localizer["Save"]</button>
                    <button type="button" class="btn btn-soft-secondary btn-sm" data-bs-dismiss="modal">@localizer["Close"]</button>
                </div>
            </div>
        </div>
    </div>
</div>
