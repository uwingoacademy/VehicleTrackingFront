@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer localizer
<div class="left-sidenav">
    <!-- LOGO -->
    <div class="brand">
        <a asp-controller="home" asp-action="index" style="position:relative; z-index:1;" class="logo">
            <span>
                <img src="~/images/uwingoLogo.jpg" alt="logo-sm" class="logo-sm">
            </span>
        </a>
    </div>
    <!--end logo-->
    <div class="menu-content h-100" style="position:relative; z-index:2;" data-simplebar>
        <ul class="metismenu left-sidenav-menu">
            <li class="menu-label mt-0">@localizer["Main"]</li>
            <li>
                <a href="javascript: void(0);"> <i data-feather="home" class="align-self-center menu-icon"></i><span>@localizer["Dashboard"]</span><span class="menu-arrow"><i class="mdi mdi-chevron-right"></i></span></a>
                <ul class="nav-second-level" aria-expanded="false">
                    <li class="nav-item"><a class="nav-link" asp-controller="home" asp-action="index"><i class="ti-control-record"></i>@localizer["Home"]</a></li>
                </ul>
            </li>
            <li>
                <a href="javascript: void(0);"><i data-feather="file-plus" class="align-self-center menu-icon"></i><span>@localizer["Pages"]</span><span class="menu-arrow"><i class="mdi mdi-chevron-right"></i></span></a>
                <ul class="nav-second-level" aria-expanded="false">
                    <li class="nav-item"><a class="nav-link" asp-action="index" asp-controller="Vehicles"><i class="ti-control-record"></i>@localizer["Vehicles"]</a></li>
                    <li class="nav-item"><a class="nav-link" asp-action="index" asp-controller="Devices"><i class="ti-control-record"></i>@localizer["Devices"]</a></li>
                    <li class="nav-item"><a class="nav-link" asp-action="index" asp-controller="Drivers"><i class="ti-control-record"></i>@localizer["Drivers"]</a></li>
                    <li class="nav-item"><a class="nav-link" asp-action="index" asp-controller="DeviceVehicles"><i class="ti-control-record"></i>@localizer["DeviceConnectedVehicles"]</a></li>
                    <li class="nav-item"><a class="nav-link" asp-action="index" asp-controller="DriverVehicle"><i class="ti-control-record"></i>@localizer["DriverConnectedVehicle"]</a></li>
                    <li class="nav-item"><a class="nav-link" asp-action="index" asp-controller="Packet"><i class="ti-control-record"></i>@localizer["Packets"]</a></li>
                    <li class="nav-item"><a class="nav-link" asp-action="index" asp-controller="PacketContent"><i class="ti-control-record"></i>@localizer["PacketContents"]</a></li>
                    <li class="nav-item"><a class="nav-link" asp-action="index" asp-controller="PeriodicMaintenance"><i class="ti-control-record"></i>@localizer["VehicleMaintenance"]</a></li>
                    <li class="nav-item"><a class="nav-link" asp-action="TrackingIndex" asp-controller="TarckingDataAcc"><i class="ti-control-record"></i>@localizer["VehicleTrackingData"]</a></li>
                </ul>
            </li>
        </ul>

        <div class="update-msg text-center">
            <a href="javascript: void(0);" class="float-end close-btn text-muted" data-dismiss="update-msg" aria-label="Close" aria-hidden="true">
                <i class="mdi mdi-close"></i>
            </a>
            <h5 class="mt-3">@localizer["UwingoAcademy"]</h5>
            <p class="mb-3">@localizer["UwingoVehicleTrackingSystemManagementPanel"]</p>
        </div>
    </div>
</div>
